import random

def number_guessing_game():
    # Generate a random number between 1 and 100
    secret_number = random.randint(1, 100)
    max_attempts = 5  # You can adjust this number
    attempts = 0

    print("..WELCOME TO THE NUMBER GUESSING GAME !..")
    print("I'm thinking of a number between 1 and 100.")
    print(f"You have {max_attempts} attempts to guess it.\n")

    while attempts < max_attempts:
        try:
            Your_guess = int(input(f"Attempt {attempts + 1}: Enter your guess(1 to 100): "))
        except ValueError:
            print("..ERROR!!..:Please enter a valid integer.")
            continue

        attempts += 1

        if Your_guess == secret_number:
            print(f"ðŸŽ‰ CONGRATULATION! HURRAY!! You guessed the number in {attempts} attempts.")
            break
        elif Your_guess < secret_number:
            print("ðŸ“‰ Too low. Try again.\n")
        else:
            print("ðŸ“ˆ Too high. Try again.\n")

    else:
        print(f"ðŸ˜” SORRY , you've used all {max_attempts} attempts. The number was {secret_number}.")
        print("Don't Worry...TRY AGAIN ...")

# Run the game
number_guessing_game()